<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.inid.sil.geektest.TestActivity"
    tools:showIn="@layout/activity_test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_gif_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:background="@color/trans"
            android:text="gif-drawable"
            android:textColor="@color/primary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/btn_stackblur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:background="@color/trans"
            android:text="stackblur"
            android:textColor="@color/primary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/btn_danmakuflame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:background="@color/trans"
            android:text="DanmakuFlame"
            android:textColor="@color/primary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/btn_xrecyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:background="@color/trans"
            android:text="XRecyclerView"
            android:textColor="@color/primary"
            android:textSize="18sp"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
